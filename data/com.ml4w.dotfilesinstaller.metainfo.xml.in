<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>com.ml4w.dotfilesinstaller</id>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>

  <name>Dotfiles Installer</name>
  <summary>Install Dotfiles easily, fast and secure. Or publish your own.</summary>
  <description>
    <p>Take control of your dotfiles configurations with Dotfiles Installer, designed to make dotfile management seamless. You can install dotfiles easily, quickly, and securely with an intuitive installation wizard that guides you through every step. The app prioritizes your data safety, offering robust backup functionality and protection for your existing customizations during the installation process.</p>
    <p>Furthermore, the app allows you to publish your own dotfiles and offer others a straightforward, intuitive way to install your preferred setup.</p>
  </description>

  <developer id="tld.vendor">
    <name>Stephan Raabe (ML4W)</name>
  </developer>

  <!-- Required: Should be a link to the upstream homepage for the component -->
  <url type="homepage">https://mylinuxforwork.github.io/dotfiles-installer/</url>
  <!-- Recommended: It is highly recommended for open-source projects to display the source code repository -->
  <url type="vcs-browser">https://github.com/mylinuxforwork/dotfiles-installer</url>
  <!-- Should point to the software's bug tracking system, for users to report new bugs -->
  <url type="bugtracker">https://github.com/mylinuxforwork/dotfiles-installer/issues</url>
  <!-- Should link a FAQ page for this software, to answer some of the most-asked questions in detail -->
  <url type="faq">https://mylinuxforwork.github.io/dotfiles-installer/</url>
  <!-- Should provide a web link to an online user's reference, a software manual or help page -->
  <url type="help">https://mylinuxforwork.github.io/dotfiles-installer/</url>
  
  <!-- All graphical applications having a desktop file must have this tag in the MetaInfo.
     If this is present, appstreamcli compose will pull icons, keywords and categories from the desktop file. -->
  <launchable type="desktop-id">com.ml4w.dotfilesinstaller.desktop</launchable>
  <!-- Use the OARS website (https://hughsie.github.io/oars/generate.html) to generate these and make sure to use oars-1.1 -->
  <content_rating type="oars-1.1" />

  <!-- Applications should set a brand color in both light and dark variants like so -->
  <branding>
    <color type="primary" scheme_preference="light">#ff00ff</color>
    <color type="primary" scheme_preference="dark">#993d3d</color>
  </branding>

